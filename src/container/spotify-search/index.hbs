<main class="main">
  {{#with data}}
  <section class="main__content">
    <form method="POST" action="/spotify-search" class="header-search">
      <img src="/svg/icon-search.svg" alt="" class="icon">
      <input type="search" class="search__input" placeholder="Введіть запит" name="value" value="{{value}}">
      <button class="search__button">Пошук</button>
    </form>


    <ul class="playlist__list">
      {{#each list}}
      <li class="playlist">
        <img src="{{image}}" class="playlist__image">
        <div class="playlist__content">
          <strong class="playlist__title">{{name}}</strong>
          <p class="playlist__text">Плейліст - {{amount}} пісень</p>
        </div>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/with}}
</main>